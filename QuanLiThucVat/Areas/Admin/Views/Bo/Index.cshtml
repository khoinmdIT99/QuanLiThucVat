<!-- Modal for create -->
<div id="myModal-create" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Tạo thêm bộ</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tên bộ</label>
                        <div class="col-sm-8">
                            <input type="text" name="TenLop" class="form-control1" id="focusedinput" placeholder="" onblur="CheckEmailExist()">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-offset-2">
                        <button id="btn-create" type="button" class="btn btn-default">Tạo</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<!-- Modal for edit -->
<div id="myModal-edit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa bộ</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tên bộ</label>
                        <div class="col-sm-8">
                            <input type="text" name="TenLop" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <label for="name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-offset-2">
                        <button type="button" id="save-edit" class="btn btn-default">Lưu</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<!-- Modal for delete -->

<div id="myModal-delete" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" data-dismiss="modal" aria-hidden="true" class="close">×</a>
                <h3>Xác nhận</h3>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa không?</p>
            </div>
            <div class="modal-footer">
                <a href="#" id="btnYes" class="btn danger">Có</a>
                <a href="#" data-dismiss="modal" aria-hidden="true" class="btn secondary">Không</a>
            </div>
        </div>

    </div>
</div>




