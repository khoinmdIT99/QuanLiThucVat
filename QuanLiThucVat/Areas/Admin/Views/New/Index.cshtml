
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Areas/Admin/Content/js/script/common.js"></script>
<script src="~/Areas/Admin/Content/js/script/TinTuc.js"></script>
<script src="~/Areas/Admin/Content/ckeditor/ckeditor.js"></script>
<script src="~/Areas/Admin/Content/ckfinder/ckfinder.js"></script>
<div class="main-page">
    <div class="button_set_one agile_info_shadow">
        <div class="row">
            <div class="col-xs-7">
                <button type="button" id="btn-add" class="btn btn-primary" data-toggle="modal" data-target="#myModal-create">
                    <i class="fa fa-plus" aria-hidden="true"></i>  Tạo tin tức mới
                </button>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="search-input" placeholder="Từ khóa..." autocomplete="off" style="height:40px">
            </div>
            <div class="col-xs-2">
                <button id="btn-search" type="button" class="btn btn-primary btn-flat">   Tìm kiếm </button>
            </div>
        </div>



    </div>
    <div class="partial-view" id="PhanTrang">
        @Html.Partial("~/Areas/Admin/Views/New/_PartialNew.cshtml")
    </div>

</div>
<!-- Modal for create -->
<div id="myModal-create" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Tạo tin tức mới</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tiêu để</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Dẫn nhập</label>
                        <div class="col-sm-8">
                            <textarea name="input" rows="5" class="form-control" id="focusedinput" placeholder="" style="resize:none"></textarea>
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Nội dung</label>
                        <div class="col-sm-8">
                            <textarea name="content" class="form-control1" id="content" placeholder=""></textarea>
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <script>
                        CKEDITOR.replace('content', {

                        });
                    </script>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Hình ảnh</label>
                        <div class="col-sm-8">
                            <input type="file" id="file" class="form-control" />
                            <img src="#" name="view-file" width="100" height="100" style="display:none;margin:15px 0px;" />
                        </div>

                    </div>
                    <div class="col-sm-offset-2">
                        <button id="btn-create" type="button" class="btn btn-default">Tạo</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<!-- Modal for edit -->
<div id="myModal-edit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa tin tức</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tiêu để</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Dẫn nhập</label>
                        <div class="col-sm-8">
                            <textarea name="input" rows="5" class="form-control" id="focusedinput" placeholder="" style="resize:none"></textarea>
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Nội dung</label>
                        <div class="col-sm-8">
                            <textarea name="content-edit" class="form-control1" id="content-edit" placeholder=""></textarea>
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <script>
                        CKEDITOR.replace('content-edit', {

                        });
                    </script>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Hình ảnh</label>
                        <div class="col-sm-9">
                            <input type="file" id="file-edit" class="form-control" style="display:none" />
                            <img src="#" name="view-file-edit" width="100" height="100" style="margin:15px 0px;cursor:pointer" />
                        </div>
                    </div>
                    <label for="name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-offset-2">
                        <button type="button" id="save-edit" class="btn btn-default">Lưu</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<!-- Modal for delete -->

<div id="myModal-delete" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" data-dismiss="modal" aria-hidden="true" class="close">×</a>
                <h3>Xác nhận</h3>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa không?</p>
            </div>
            <div class="modal-footer">
                <a href="#" id="btnYes" class="btn danger">Có</a>
                <a href="#" data-dismiss="modal" aria-hidden="true" class="btn secondary">Không</a>
            </div>
        </div>

    </div>
</div>






