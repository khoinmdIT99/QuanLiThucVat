                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Khả năng tái sinh</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="reborn">
                                @if (ListKhaNangTaiSinh != null)
                                {
                                    foreach (var item in ListKhaNangTaiSinh)
                                    {
                                        <option value="@item.IDKhaNangTaiSinh">@item.KhaNangTaiSinh</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Giá trị kinh tế</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="economy">
                                @if (ListGiaTriKinhTe != null)
                                {
                                    foreach (var item in ListGiaTriKinhTe)
                                    {
                                        <option value="@item.IDGiaTriKinhTe">@item.GiaTriKinhTe</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Thuộc họ</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="IDBo">
                                @if (ListHo != null)
                                {
                                    foreach (var item in ListHo)
                                    {
                                        <option value="@item.IDHo">@item.TenHo</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Mô tả chung</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="description" style="resize:none" rows="5"></textarea>
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Hình ảnh</label>
                        <div class="col-sm-8">
                            <input type="file" id="file" class="form-control" />
                            <img src="#" name="view-file" width="100" height="100" style="display:none;margin:15px 0px;" />
                        </div>

                    </div>
                    <label for="name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-offset-2">
                        <button id="btn-create" type="button" class="btn btn-default">Tạo</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
