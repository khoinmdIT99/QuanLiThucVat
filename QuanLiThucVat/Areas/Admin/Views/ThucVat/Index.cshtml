                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Độ dày vỏ (mm)</label>
                        <div class="col-sm-8">
                            <input type="text" name="DoDayVo" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Khả năng sinh trưởng</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="growth">
                                @if (ListKhaNangSinhTruong != null)
                                {
                                    foreach (var item in ListKhaNangSinhTruong)
                                    {
