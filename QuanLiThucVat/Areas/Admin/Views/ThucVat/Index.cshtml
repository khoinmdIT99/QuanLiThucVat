<!-- Modal for create -->
<div id="myModal-create" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Tạo thêm thực vật</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tên Tiếng Việt</label>
                        <div class="col-sm-8">
                            <input type="text" name="nameTV" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Tên LaTinh</label>
                        <div class="col-sm-8">
                            <input type="text" name="nameLT" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Lượng nước trong lá (%)</label>
                        <div class="col-sm-8">
                            <input type="text" name="LuongNuocTrongLa" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Lượng nước trong vỏ (%)</label>
                        <div class="col-sm-8">
                            <input type="text" name="LuongNuocTrongVo" class="form-control1" id="focusedinput" placeholder="">
                            <div class="col-sm-12">
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Lượng tro thô trong lá (%)</label>
                        <div class="col-sm-8">
